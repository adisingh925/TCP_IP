<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/mainActivityIPAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/mainActivitySendingPort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mainActivityIPAddress" />

    <TextView
        android:id="@+id/mainActivityRouterIpTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mainActivitySendingPort" />

    <TextView
        android:id="@+id/mainActivityRouterPortTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mainActivityRouterIpTextView" />

    <EditText
        android:id="@+id/mainActivityUDPIpAddressEditText"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:hint="Enter UDP IP"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toTopOf="@id/mainActivityConfigureUDPButton"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/mainActivityConfigureUDPButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:layout_marginEnd="16dp"
        app:cornerRadius="30dp"
        android:text="Configure UDP"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/mainActivityUDPServerButton"/>

    <EditText
        android:id="@+id/mainActivityUDPPortEditText"
        app:layout_constraintTop_toTopOf="@id/mainActivityConfigureUDPButton"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/mainActivityConfigureUDPButton"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:inputType="number"
        android:hint="Enter UDP Port"
        app:layout_constraintBottom_toBottomOf="@id/mainActivityConfigureUDPButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:id="@+id/mainActivityServerButton"
        app:layout_constraintBottom_toTopOf="@id/mainActivityUDPClientButton"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="24dp"
        android:text="TCP Server"
        app:cornerRadius="30dp"
        android:layout_marginEnd="16dp"
        android:layout_height="wrap_content"/>

    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:id="@+id/mainActivityUDPServerButton"
        app:layout_constraintBottom_toTopOf="@id/mainActivityServerButton"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="24dp"
        android:text="UDP Server"
        app:cornerRadius="30dp"
        android:layout_marginEnd="16dp"
        android:layout_height="wrap_content"/>

    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/mainActivityUDPServerButton"
        app:layout_constraintBottom_toBottomOf="@id/mainActivityUDPServerButton"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toLeftOf="@id/mainActivityServerButton"
        android:id="@+id/mainActivityUDPServerEditText"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:text="UDP Server :"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="24dp"
        android:id="@+id/mainActivityUDPServerTextView"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/mainActivityUDPServerTextView"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="24dp"
        android:text="TCP Server :"
        android:id="@+id/mainActivityServerTextView"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/mainActivityUDPClientTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:text="UDP Client :"
        app:layout_constraintTop_toBottomOf="@id/mainActivityServerTextView"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="24dp" />

    <TextView
        android:id="@+id/mainActivityClientTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/mainActivityUDPClientTextView"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="16dp"
        android:text="TCP Client :"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="24dp" />

    <TextView
        android:id="@+id/mainActivityTCPStatusTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="16dp"
        android:text="TCP is running on localhost"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/mainActivityClientTextView"/>

    <TextView
        android:id="@+id/mainActivityUDPStatusTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/mainActivityTCPStatusTextView"/>

    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/mainActivityServerButton"
        app:layout_constraintBottom_toBottomOf="@id/mainActivityServerButton"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toLeftOf="@id/mainActivityServerButton"
        android:id="@+id/mainActivityServerEditText"/>

    <EditText
        android:id="@+id/mainActivityUDPClientEditText"
        android:layout_width="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/mainActivityUDPClientButton"
        app:layout_constraintRight_toLeftOf="@id/mainActivityClientButton"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/mainActivityUDPClientButton" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/mainActivityUDPClientButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/mainActivityClientButton"
        app:layout_constraintRight_toRightOf="parent"
        android:text="UDP Client"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="24dp"
        app:cornerRadius="30dp"/>

    <EditText
        android:id="@+id/mainActivityClientEditText"
        android:layout_width="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/mainActivityClientButton"
        app:layout_constraintRight_toLeftOf="@id/mainActivityClientButton"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/mainActivityClientButton" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/mainActivityClientButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="TCP Client"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:cornerRadius="30dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>